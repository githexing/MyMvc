
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vue.js分页</title>
    <link href="~/css/page.css" rel="stylesheet" />
</head>
<body>

    <div class="page-bar">
        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>姓名</td>
                </tr>
            </thead>
            <tbody v-for="i in collection">
                <tr>
                    <td v-html="i.ID"></td>
                    <td v-html="i.Name"></td>
                </tr>

            </tbody>

        </table>
        <ul>
            <li><a v-on:click="cur=1,pageClick()">首页</a></li>
            <li v-if="cur>1"><a v-on:click="cur--,pageClick()">上一页</a></li>
            <li v-if="cur==1"><a class="banclick">上一页</a></li>
            <li v-for="index in indexs" v-bind:class="{ 'active': cur == index}"><a v-on:click="btnClick(index)" v-html="index"></a></li>
            <li v-if="cur!=all"><a v-on:click="cur++,pageClick()">下一页</a></li>
            <li v-if="cur == all"><a class="banclick">下一页</a></li>
            <li><a><input type='text' id='txtPage' style='width: 30px;height: 13px;' v-model="txtPage" onkeyup="value=value.replace(/[^\d]/g,'')"></a></li>
            <li><a id='go' v-on:click="go">跳转</a></li>
            <li><a v-on:click="cur=all,pageClick()">尾页</a></li>
            <li><a>共<i><font v-html="all"></font></i>页</a></li>
        </ul>
    </div>
    <script src="~/js/jquery-1.10.2.min.js"></script> 
    <script src="~/js/vue.min.js"></script>
    <script src="~/js/vue-resource.js"></script>


    <script type="text/javascript">
    //var Url = "www.hao123.com";
    //var Data = "";
    //var el = ""; 
    var pageBar = new Vue({
    el: '.page-bar',
    data: {
        collection: [],
        all: "", //总页数
        cur: 1,//当前页码
        txtPage: ""

    },
    watch: {
        cur: function(oldValue , newValue){
            console.log(arguments);
        }
    },
     methods: {
        btnClick: function(data){//页码点击事件
            if(data != this.cur){
                this.cur = data
            }
            this.pageClick();
            //alert(Url)
        },
        pageClick: function () {

            this.$http.post("/Home/gg?page=" + this.cur).then(function (Data) {
                this.collection = Data.data.Data.UsersList;
            })
            //console.log('现在在'+this.cur+'页');
        },
        go: function () {

            if (this.txtPage=="") {
                return;
            }
            else {
                this.cur = this.txtPage;
            }

            this.$http.post("/Home/gg?page=" + this.cur).then(function (Data) {
                this.collection = Data.data.Data.UsersList;
            })
        }
     },
    computed: {
        indexs: function(){
          var left = 1;
          var right = this.all;
          var ar = [];
          if(this.all>= 5){
            if(this.cur > 3 && this.cur < this.all-2){
                    left = this.cur - 2
                    right = this.cur + 2
            }else{
                if(this.cur<=3){
                    left = 1
                    right = 5
                }else{
                    right = this.all
                    left = this.all -4
                }
            }
         }
        while (left <= right){
            ar.push(left)
            left ++
        }
        return ar
       }

    },
    mounted: function () {
        this.$http.post("/Home/gg?page=" + this.cur).then(function (Data) {
            this.collection = Data.data.Data.UsersList;
            this.all = Data.data.Data.PageSize;
        })



    }

})
    </script>
</body>

</html>
